<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/bg_color">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/loginPageLogo" android:layout_weight="0"
                    app:srcCompat="@drawable/logo" android:layout_marginTop="100dp"/>
            <TextView
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/loginPageName"
                    android:textColor="@color/text_color" android:textSize="24sp" android:textAlignment="center"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@string/Notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/loginPageHelp"
                    android:textColor="#FFFF00" android:textAlignment="center" android:clickable="true"
                    android:layout_marginBottom="5dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/userNameEntry" android:hint="@string/user_name"
                    android:background="@color/entry_bg_Color" android:textColor="@color/entry_text_color"
                    android:layout_weight="0" android:layout_marginTop="40dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/passwordEntry" android:textColor="@color/entry_text_color"
                    android:background="@color/entry_bg_Color" android:hint="@string/password"
                    android:layout_marginTop="15dp"/>
            <TextView
                    android:text="@string/forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/loginPageForgotPassword"
                    android:textColor="@color/text_color" android:textAlignment="textEnd" android:clickable="true"/>
            <Button
                    android:text="@string/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/loginPageBtn"
                    android:layout_marginTop="40dp"/>
            <TextView
                    android:text="@string/who"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/loginPageWho"
                    android:textColor="@color/text_color" android:textAlignment="center" android:clickable="true"
                    android:layout_weight="1"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>